<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.TeacherDao">

    <resultMap type="com.example.demo.entity.Teacher" id="TeacherMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
<!--        <result property="subjectId" column="subject_id" jdbcType="INTEGER"/>-->
        <association property="subject"
                     column="subject_id"
                     select="com.example.demo.dao.SubjectDao.queryById">
        </association>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TeacherMap">
        select id,
               name,
               subject_id
        from student_task.teacher
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TeacherMap">
        select id,
               name,
               subject_id
        from student_task.teacher
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TeacherMap">
        select
        id, name, subject_id
        from student_task.teacher
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="subjectId != null">
                and subject_id = #{subjectId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into student_task.teacher(name, subject_id)
        values (#{name}, #{subjectId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into student_task.teacher(name, subject_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.subjectId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into student_task.teacher(name, subject_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.subjectId})
        </foreach>
        on duplicate key update
        name = values(name) , subject_id = values(subject_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update student_task.teacher
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="subjectId != null">
                subject_id = #{subjectId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from student_task.teacher
        where id = #{id}
    </delete>

</mapper>