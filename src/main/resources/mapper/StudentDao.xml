<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.StudentDao">

    <resultMap type="com.example.demo.entity.Student" id="StudentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="majorId" column="major_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StudentMap">
        select id,
               name,
               major_id
        from student_task.student
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StudentMap">
        select id,
               name,
               major_id
        from student_task.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StudentMap">
        select
        id, name, major_id
        from student_task.student
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="majorId != null">
                and major_id = #{majorId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into student_task.student(name, major_id)
        values (#{name}, #{majorId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into student_task.student(name, major_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.majorId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into student_task.student(name, major_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.majorId})
        </foreach>
        on duplicate key update
        name = values(name) , major_id = values(major_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update student_task.student
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="majorId != null">
                major_id = #{majorId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from student_task.student
        where id = #{id}
    </delete>

</mapper>